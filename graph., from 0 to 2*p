% Define the x-axis (e.g., from 0 to 2*pi with 1000 points)
x = linspace(0, 2*pi, 1000);

% Compute the y-values (sine of x)
y = sin(x);

% Create the plot
plot(x, y, 'b-', 'LineWidth', 2); % 'b-' means blue solid line, LineWidth sets thickness

% Add labels and title
xlabel('x');
ylabel('sin(x)');
title('Sine Function');

% Add a grid for better readability
grid on;